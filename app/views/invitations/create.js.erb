var existingFlash;
var newFlash;

// Remove existing flash, if any.
existingFlash = document.querySelector('.flash');
if (existingFlash) existingFlash.remove();

// Change status to invited and delete 'Remove' link.
document.querySelector('a[href="/guests/<%= @guest.id %>/invitations"]')
  .parentNode
  .innerHTML = 'Invited';
document.querySelector('a[href="/guests/<%= @guest.id %>"]')
  .parentNode
  .innerHTML = '';

// Create and append new flash.
newFlash = document.createElement('div');
newFlash.classList.add('flash');
newFlash.classList.add('flash-success');
newFlash.innerHTML = "<%= @flash %>";
document.querySelector('header').appendChild(newFlash);
